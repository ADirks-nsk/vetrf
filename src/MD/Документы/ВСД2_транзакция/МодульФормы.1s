		оПривязки.Привязка("ТзУсловияПеревозки, ТзСписокВСД", "H", "Форма", "W", "Форма");
		//оПривязки.Привязка("ТзСписокВСД", "H", "Комментарий", "W", "Форма");
		//оПривязки.Привязка("кнЗакрыть","T","Форма");
