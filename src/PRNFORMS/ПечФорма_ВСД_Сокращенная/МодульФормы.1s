		Если ПустоеЗначение(ВСД.ДатаИзготовления2)=0 Тогда 
			тВыработано=тВыработано+ "-" + СокрЛП(ВСД.ДатаИзготовления2);
		КонецЕсли;
	Иначе
		тВыработано = тВыработано + СокрЛП(ВСД.ДатаИзготовления);
	КонецЕсли;
	тКод = "Код: "+ВСД.UUID;  
