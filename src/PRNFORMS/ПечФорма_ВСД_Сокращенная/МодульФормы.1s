	Исключение
		//тПлощадка = "Предприятие-получатель: "+ВСД.Получатель_Площадка+" - "+ВСД.Получатель_ХозСубъект.Контрагент.ЮрФизЛицо.ФактАдрес;
		тПлощадка = "Предприятие-получатель: "+ВСД.Получатель_Площадка;
