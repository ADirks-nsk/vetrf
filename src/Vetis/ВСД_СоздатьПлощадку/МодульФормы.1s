	//appID = ГМ.ОтправитьЗапросXML(ЗапросXML);
	appID = ГМ.ОтправитьЗапросSoap(ЗапросXML, метод);

	Если ПустоеЗначение(appID)=0 Тогда

		ПолучитьОтветПлощадка( appID, Площадка )

	КонецЕсли;

