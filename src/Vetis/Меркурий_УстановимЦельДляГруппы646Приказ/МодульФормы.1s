	Таб1.ИсходнаяТаблица("Цель"); 
	Таб1.Вывести();
	//НомКол=1;
	НомСтр=1;
	Пока ПустоеЗначение(Таб1.Область(НомСтр,1).текст)=0 Цикл
		группа=СокрЛП(Таб1.Область(НомСтр,1).текст);
		наим=СокрЛП(Таб1.Область(НомСтр,2).текст);
	
