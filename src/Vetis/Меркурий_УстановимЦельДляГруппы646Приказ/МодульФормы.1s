	тз.Группа = группа;
	//тз.Цель = ;
		НомСтр=НомСтр+1; 
		Состояние("строк "+НомСтр);
	Конеццикла; 
	
	ТЗ.Свернуть("Группа,Цель","");

	
КонецПроцедуры

